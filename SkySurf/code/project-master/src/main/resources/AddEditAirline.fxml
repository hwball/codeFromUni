            <Button mnemonicParsing="false" onAction="#confirm" text="Confirm"/>
            <Button fx:id="buttonCancel" mnemonicParsing="false" onAction="#close"
                    text="Cancel"/>
        </ToolBar>
    </VBox>
</AnchorPane>
