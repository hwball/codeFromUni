                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
            </VBox.margin>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Name:"/>
            <TextField fx:id="fieldName" maxHeight="-Infinity" maxWidth="-Infinity"
                       minHeight="-Infinity" minWidth="-Infinity" prefWidth="400.0"
                       GridPane.columnIndex="1"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Alias:" GridPane.rowIndex="1"/>
            <TextField fx:id="fieldAlias" maxWidth="-Infinity" prefWidth="400.0"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Country:"
                  GridPane.rowIndex="2"/>
            <TextField fx:id="fieldCountry" maxWidth="-Infinity" prefWidth="400.0"
                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="IATA:" GridPane.rowIndex="3"/>
            <TextField fx:id="fieldIATA" maxWidth="-Infinity" prefWidth="400.0"
                       GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="ICAO:" GridPane.rowIndex="4"/>
            <TextField fx:id="fieldICAO" maxWidth="-Infinity" prefWidth="400.0"
                       GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Call Sign:"
                  GridPane.rowIndex="5"/>
            <TextField fx:id="fieldCallSign" maxWidth="-Infinity" prefWidth="400.0"
                       GridPane.columnIndex="1" GridPane.rowIndex="5"/>
